class Solution {
public:
    
    bool check(int x,int y,int N,int M){
        return x>=0 && y>=0 && x<N && y<M;
    }
    
    int orangesRotting(vector<vector<int>>& grid) {
        queue<pair<int,int>> q;
        int n=grid.size();
        int m=grid[0].size();
        int flag=0;
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(grid[i][j]==2){
                    q.push({i,j});
                }
                if(grid[i][j]==1){
                    flag=1;
                }
            }
        }
        if(flag==0)return 0;
        int timer=-1;
        while(q.size()){
            
            int sz=q.size();
            while(sz--){
                int x=q.front().first;
                int y=q.front().second;
                
                if(check(x,y+1,n,m) && grid[x][y+1]==1){
                    q.push({x,y+1});
                    grid[x][y+1]=2;
                }
                 if(check(x,y-1,n,m) && grid[x][y-1]==1){
                    q.push({x,y-1});
                    grid[x][y-1]=2;
                }
                 if(check(x+1,y,n,m) && grid[x+1][y]==1){
                    q.push({x+1,y});
                    grid[x+1][y]=2;
                }
                 if(check(x-1,y,n,m) && grid[x-1][y]==1){
                    q.push({x-1,y});
                    grid[x-1][y]=2;
                }
                 q.pop();
                
            }
            timer++;
           
        }
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(grid[i][j]==1){
                    return -1;
                }
            }
        }
        return timer;
    }
};
